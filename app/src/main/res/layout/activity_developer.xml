<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/bkgnd"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tirthcshahgmail.ifest15.AboutUs">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Developers"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:textColor="#f4f4f4"
        android:id="@+id/aboutUs"
        android:textSize="35sp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Team skapNETT"
        android:textStyle="bold"
        android:id="@+id/textView35"
        android:fontFamily="sans-serif-condensed-light"
        android:layout_below="@+id/aboutUs"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tirth Shah\nSneh Patel\nAbhishek Parikh\n Saprem Shah"
        android:id="@+id/textView4"
        android:fontFamily="sans-serif-condensed-light"
        android:layout_below="@+id/textView35"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
